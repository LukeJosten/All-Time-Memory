<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1 class="text-center">Please Sign up</h1>

    {{#if message}}
        <div class="alert alert-danger">{{message}}</div>
    {{/if}}

    <form action="/sign-up" method="post">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" required>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <label>Are you a Patient or a Doctor?</label>
        <div class="radio">
            <label><input type="radio" name="role" value="patient" required/>Patient</label>
        </div>
        <div class="radio">
            <label><input type="radio" name="role" value="doctor">Doctor</label>
        </div>

        <button type="submit" class="btn btn-primary btn-lg btn-block">Sign up</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/">Sign in</a></p>

</div>
</div>